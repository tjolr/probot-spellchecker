    "jest": "^24.8.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0"
